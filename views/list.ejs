<body>
    
    <div class="flex-parent jc-center">

        <div class="topform left" >
            <form action="/" method="post">
                <button class="buttonchanger checker" type="submit" name="list" value="gotohome"  >Today</button>
            </form>
        </div>
        <div class="topform right" >
            <form action="/" method="post">
                <button class="buttonchanger " type="submit" name="list" value="gotowork" >Work</button>
            </form>
        </div>
    </div>



    <div class="box "id="heading" >
        <h1>
            <%= ListTittle %>
        </h1>
    </div>

    <div class="box">
           <% for (let index=0; index < ListItems.length; index++) { %>
